//
// calculo del numero  e,   segundo metodo : limite (muy lento)
//

decimales 14

e = 0

desde n = 1 hasta 20000

    haz
      e = 1 +  (1/n)
      llamar  potencia
      imprimir e, '  elevado a = ', n, '  =  ', m

    fin-haz


terminar


proc    potencia

    m = 1
    desde x = 1 hasta n
        haz

           m  = m * e

        fin-haz

fin
